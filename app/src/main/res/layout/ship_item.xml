<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ship_item_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8sp"
    android:background="@color/ship_background"
    android:orientation="horizontal"
    android:padding="8sp">

    <ImageView
        android:id="@+id/ship_part1"
        android:layout_width="@dimen/board_item_size"
        android:layout_height="@dimen/board_item_size"
        android:contentDescription="@null"
        app:srcCompat="@drawable/icon_ship" />

    <ImageView
        android:id="@+id/ship_part2"
        android:layout_width="@dimen/board_item_size"
        android:layout_height="@dimen/board_item_size"
        android:contentDescription="@null"
        app:srcCompat="@drawable/icon_ship" />

    <ImageView
        android:id="@+id/ship_part3"
        android:layout_width="@dimen/board_item_size"
        android:layout_height="@dimen/board_item_size"
        android:contentDescription="@null"
        app:srcCompat="@drawable/icon_ship" />

    <ImageView
        android:id="@+id/ship_part4"
        android:layout_width="@dimen/board_item_size"
        android:layout_height="@dimen/board_item_size"
        android:contentDescription="@null"
        app:srcCompat="@drawable/icon_ship" />

    <ImageView
        android:id="@+id/ship_part5"
        android:layout_width="@dimen/board_item_size"
        android:layout_height="@dimen/board_item_size"
        android:contentDescription="@null"
        app:srcCompat="@drawable/icon_ship" />
</LinearLayout>